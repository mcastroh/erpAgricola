@model Agricola_Models.Models.UnidadMedida

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel-warning">
            <div class="panel-heading">
                <h4>Nueva unidad de medida</h4>
                <hr />
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Registrar", "UnidadMedida")" method="post">
                    <div class="form-group">
                        <label>Descripción</label>
                        <input type="text" class="form-control" name="Descripcion" />
                    </div>
                    <div class="form-group">
                        <label>Símbolo</label>
                        <input type="text" class="form-control" name="Simbolo" />
                    </div>
                    <div class="form-group">
                        <label>Código Sunat</label>
                        <input type="text" class="form-control" name="IdSunat" />
                    </div>
                    <hr />
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-success" href="@Url.Action("Index", "UnidadMedida")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

                    